{
  "name": "quickgram-server",
  "version": "1.0.0",
  "description": "A quick messaging app server",
  "scripts": {
    "clean": "rm -rf dist",
    "build:js": "npm run clean && babel src -d dist/src",
    "start:app": "node -r dotenv/config dist/src/index.js",
    "start": "nodemon -e js --watch src --exec \"npm run build:js && npm run start:app\"",
    "lint": "eslint --quiet src --ext .js,.json"
  },
  "author": "iamraviprakash",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/schema": "^8.3.8",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "datasource-sql": "^1.6.0",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-cost-analysis": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tools": "^8.2.0",
    "knex": "^0.95.15",
    "nodemon": "^2.0.15",
    "pg": "^8.7.1",
    "subscriptions-transport-ws": "^0.11.0",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "2.5.1"
  },
  "nodemonConfig": {
    "events": {
      "restart": "echo \"Restarting server...\""
    }
  }
}
